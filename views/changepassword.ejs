
<% layout('layout') -%>
<% if (message) { %>
<p><%= message %></p>
<% } %>
<br>
<center><h1>Change Password</h1></center>
    <style type="text/css">
      body {
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
      }

      .form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
           -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
      }
      .form-signin .form-signin-heading,
      .form-signin .checkbox {
        margin-bottom: 10px;
      }
      .form-signin input[type="text"],
      .form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
      }

    </style>
<script>
function validate(form) {
  var ok = true
  for(var i = 0; i < form.childElementCount; i++){
    if(form.children[i].name == "password-confirm") {
      if(document.getElementsByName('password')[1].value == form.children[i].value) {

      } else {
        ok = false;
      }
    }
    if(form.children[i].tagName.toLowerCase() != "label"){if(form.children[i].value === "" || form.children[i].value === null){ok=false}}}
  if(!ok){alert('Please fill in all the fields/make sure both passwords are the same')}
  return ok;
}
</script>
<form action="/resetpass/<%=id%>" method="post" class="form-signin" onsubmit="return validate(this);">

        <input type="password" name="password" class="input-block-level" placeholder="Password">
        <input type="password" name="password-confirm" class="input-block-level" placeholder="Confirm Password">
        <button class="btn btn-large btn-primary" type="submit" value="abcd">Change Password</button>
</form>
